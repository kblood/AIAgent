<UserControl x:Class="AIAgentTest.Views.DebugPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:AIAgentTest.Views"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Button Bar -->
        <StackPanel Grid.Row="0" 
                    Orientation="Horizontal" 
                    Margin="0,0,0,10">
            <Button Content="Show Context" 
                    Command="{Binding ShowContextCommand}"
                    Margin="0,0,10,0"/>
            <Button Content="Clear Context" 
                    Command="{Binding ClearContextCommand}"
                    Margin="0,0,10,0"/>
            <Button Content="Summarize Context"
                    Command="{Binding SummarizeContextCommand}"/>
        </StackPanel>
        
        <!-- Debug Output Area -->
        <RichTextBox Grid.Row="1"
                     x:Name="DebugBox"
                     IsReadOnly="True"
                     VerticalScrollBarVisibility="Auto"
                     FontFamily="Consolas">
        </RichTextBox>
    </Grid>
</UserControl>