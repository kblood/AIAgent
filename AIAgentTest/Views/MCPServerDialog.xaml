<Window x:Class="AIAgentTest.Views.MCPServerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AIAgentTest.Views"
        mc:Ignorable="d"
        Title="MCP Server Configuration" Height="300" Width="500" 
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" 
                   Text="Configure MCP Server" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>

        <!-- Server Name -->
        <TextBlock Grid.Row="1" Grid.Column="0" Text="Server Name:" VerticalAlignment="Center" Margin="0,0,10,0"/>
        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Name}" Margin="0,5"/>

        <!-- Server URL -->
        <TextBlock Grid.Row="2" Grid.Column="0" Text="Server URL:" VerticalAlignment="Center" Margin="0,0,10,0"/>
        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Url}" Margin="0,5"/>

        <!-- Server Type -->
        <TextBlock Grid.Row="3" Grid.Column="0" Text="Server Type:" VerticalAlignment="Center" Margin="0,0,10,0"/>
        <ComboBox Grid.Row="3" Grid.Column="1" ItemsSource="{Binding ServerTypes}" 
                  SelectedItem="{Binding Type}" Margin="0,5"/>

        <!-- Enabled Status -->
        <CheckBox Grid.Row="4" Grid.Column="1" Content="Enabled" 
                  IsChecked="{Binding IsEnabled}" Margin="0,10"/>

        <!-- Description -->
        <TextBlock Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" TextWrapping="Wrap" Margin="0,15,0,0">
            MCP servers provide additional tools and capabilities to the AI. 
            Configure the connection details for the server you wish to integrate.
        </TextBlock>

        <!-- Buttons -->
        <StackPanel Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2" 
                    Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Cancel" Width="80" Margin="0,0,10,0" Click="CancelButton_Click"/>
            <Button Content="Save" Width="80" Click="SaveButton_Click" IsDefault="True"/>
        </StackPanel>
    </Grid>
</Window>
